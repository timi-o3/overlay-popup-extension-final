{
    "manifest_version": 3,
    "name": "Horizontal Bar Overlay Extension",
    "version": "1.0",
    "description": "Adds a transparent horizontal bar that follows mouse movements.",
    "permissions": ["activeTab", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["overlay.css"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png",
        "128": "icon128.png"
      }
    }
  }
